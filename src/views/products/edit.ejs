<%- include ('../partials/head') %>
<%- include ('../partials/header') %>
<script src="/js/gameCreate.js" defer>
</script>
<main class="main-main">
    <header class="main-title first-title">
        <h3 class="big-title">
            EDITAR ARTÍCULO
        </h3>
        <h5 class="small-title">
            EDITAR ARTÍCULO
        </h5>
    </header>
    <form
        class="product-create-form"
        action="/products/<%= editableGame.id %>?_method=PUT"
        method="POST"
        enctype="multipart/form-data"
    >
        <section class="product-create-section">
            <!-- title -->
            <div class="input-box">
                <label class="label-label" for="title">
                    Nombre
                </label>
                <input
                    class="input-text input-text-product"
                    type="text"
                    name="title"
                    id="title"
                    value="<%= editableGame.title %>"
                    required
                >
            </div>
            <!-- categories -->
            <div class="input-box">
                <label class="label-label" for="categories">
                    Categorías
                </label>
                <div class="properties-categories">
                    <% for (i = 0; i < editableGame.categories.length; i++) { %>
                        <select
                                class="input-text properties-category"
                                name="categories"
                                required
                            >
                            <option>
                                <%= editableGame.categories[i].title %>
                            </option>
                            <% for (j = 0; j < oldCategories.length; j++) { %>
                                <option value="<%= [j] %>">
                                    <%= oldCategories[j].title %>
                                </option>
                            <% } %>
                        </select>
                    <% } %>
                </div>
            </div>
            <!-- platforms -->
            <div class="input-box">
                <label class="label-label">
                    Plataformas
                </label>
                <label class="label-smaller">
                    Marque las plataformas en las que éste producto está disponible
                </label>
                <div class="platform-check-box">
                    <label class="label-label label-radio label-platforms" for="windows">
                        <i class="fab fa-windows"></i>
                        <input
                            class="input-checkbox-platform"
                            type="checkbox"
                            name="platforms"
                            id="windows"
                            value="0"
                            <% editableGame.platforms.forEach(platform => { %>
                                <%= platform.title == 'WINDOWS' ? 'checked' : null %>
                            <% }) %>
                        >
                    </label>
                    <label class="label-label label-radio label-platforms" for="mac-os">
                        <i class="fab fa-apple"></i>
                        <input
                            class="input-checkbox-platform"
                            type="checkbox"
                            name="platforms"
                            id="mac-os"
                            value="1"
                            <% editableGame.platforms.forEach(platform => { %>
                                <%= platform.title == 'MAC OS' ? 'checked' : null %>
                            <% }) %>
                        >
                    </label>
                    <label class="label-label label-radio label-platforms" for="linux">
                        <i class="fab fa-linux"></i>
                        <input
                            class="input-checkbox-platform"
                            type="checkbox"
                            name="platforms"
                            id="linux"
                            value="2"
                            <% editableGame.platforms.forEach(platform => { %>
                                <%= platform.title == 'LINUX' ? 'checked' : null %>
                            <% }) %>
                        >
                    </label>
                    <label class="label-label label-radio label-platforms" for="vr-headset">
                        <i class="fas fa-vr-cardboard"></i>
                        <input
                            class="input-checkbox-platform"
                            type="checkbox"
                            name="platforms"
                            id="vr-headset"
                            value="3"
                            <% editableGame.platforms.forEach(platform => { %>
                                <%= platform.title == 'VR HEADSET' ? 'checked' : null %>
                            <% }) %>
                        >
                    </label>
                    <div class="error-box">

                    </div>
                </div>
            </div>
            <!-- img -->
            <div class="input-box file-box">
                <label class="label-label file-box-label">
                    Imágen
                </label>
                <label class="label-label input-text product-file edit-product-file" for="img">
                    <img src="/img/products/<%= editableGame.img %>">
                    <input 
                        class="input-file" 
                        type="file" 
                        name="img" 
                        id="img" 
                        accept=".jpg, .jpeg, .png, .webp"
                        required
                    >
                </label>
            </div> 
            <!-- RELEVANT -->
            <div class="input-box">
                <label class="label-label">
                    ¿Pertenece a sección "RECOMENDADOS"?
                </label>
                <label class="label-label label-radio" for="relevant-true">
                    SI
                    <input
                        class="input-radio"
                        type="radio"
                        name="relevant"
                        value="true"
                        id="relevant-true"
                        required
                        <% editableGame.status.forEach(status => { %>
                            <%= status.name == 'RELEVANT' ? 'checked' : null %>
                        <% }) %>
                    >
                </label>
                <label class="label-label label-radio" for="relevant-false">
                    NO
                    <input
                        class="input-radio"
                        type="radio"
                        name="relevant"
                        value="false"
                        id="relevant-false"
                        required
                        <% editableGame.status.forEach(status => { %>
                            <%= status.name != 'RELEVANT' ? 'checked' : null %>
                        <% }) %>
                    >
                </label>
            </div>
            <!-- IN OFFER -->
            <div class="input-box">
                <label class="label-label">
                    ¿Producto "EN OFERTA"?
                </label>
                <label class="label-label label-radio" for="offer-true">
                    SI
                    <input
                        class="input-radio"
                        type="radio"
                        name="offer"
                        value="true"
                        id="offer-true"
                        required
                        <% editableGame.status.forEach(status => { %>
                            <%= status.name == 'IN OFFER' ? 'checked' : null %>
                        <% }) %>
                    >
                </label>
                <label class="label-label label-radio" for="offer-false">
                    NO
                    <input
                        class="input-radio"
                        type="radio"
                        name="offer"
                        value="false"
                        id="offer-false"
                        required
                        <% editableGame.status.forEach(status => { %>
                            <%= status.name != 'IN OFFER' ? 'checked' : null %>
                        <% }) %>
                    >
                </label>
            </div>
            <!-- price -->
            <div class="input-box">
                <label class="label-label" for="price">
                    Precio
                </label>
                <span class="discount-indicator">
                    $
                </span>
                <input 
                    class="input-text input-price"
                    type="number" 
                    name="price" 
                    id="price" 
                    placeholder="1999"
                    maxlength="4" 
                    min="1"
                    max="9999"
                    step=".01"
                    required
                    value="<%= editableGame.price %>"
                >
            </div>
            <!-- discount -->
            <div class="input-box">
                <label class="label-label discount-rate-label" for="discount">
                    ¿Qué porcentaje de DESCUENTO se debe aplicar?
                </label>
                <span id="discount-span" class="discount-indicator">
                    %
                </span>
                <input
                    class="input-text input-discount"
                    type="number"
                    name="discount"
                    id="discount"
                    placeholder="50"
                    min="1"
                    max="99"
                    step="1"
                    value="<%= editableGame.discount %>"
                >
            </div>
            </div>
            <!-- description -->
            <div class="input-box">
                <label class="label-label" for="description">
                    Descripción
                </label>
                <textarea 
                    class="text-area-product" 
                    name="description" 
                    id="description" 
                    rows="15" 
                    maxlength="3000"
                ><%= editableGame.description %></textarea>
            </div>
            <!-- BUTTONS -->
            <div class="button-box">
                <button class="button-send" type="submit">
                    <h1 class="big-title">
                        EDITAR
                    </h1>
                    <h4 class="small-title">
                        EDITAR
                    </h4>
                </button>
                <button class="button-cancel" type="button">
                    <a href="/products/<%= editableGame.id %>">
                        <h3 class="big-title">
                            CANCELAR
                        </h3>
                    </a>
                    <a href="/products/<%= editableGame.id %>">
                        <h5 class="small-title">
                            CANCELAR
                        </h5>
                    </a>
                </button>
            </div>
        </section>
    </form>
</main>
<%- include ('../partials/footer') %>