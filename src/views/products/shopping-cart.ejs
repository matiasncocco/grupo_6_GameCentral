<%- include('../partials/head') %>
<%- include('../partials/header') %>

<main class="main-main">
    <!-- Título ofertas -->
    <header class="main-title" id="first-title">
        <div class="top-small-tittle"><h6 >Home > Shopping Cart</h6></div>
        <div class="botton-big-tittle"><h4>Shopping Items</h4></div>
    </header>
    
    <!-- Sección de ofertas -->
    <section class="main-section-cart">

        <!-- HADES -->
        <article class="unit-product-cart">
            <a href="/productDetail" class="view-cart">
                <!-- Imágen -->
                <div class="game-image-cart">
                    <img src="img/hades-card.jpg" alt="hades">
                </div>
                    <!-- Name Product -->
                <section class="Description-cart">
                    <div class="name-game">
                        <h3>HADES - Early Access</h3>
                    </div>    
                    <section class="price-trash-cart">
                        <!-- precio -->
                        <div class="price-cart">
                            <h2>$139.99</h2>
                        </div>
                        <!-- trash -->
                        <footer class="trash-cart">
                            <i class="fas fa-trash-alt"></i>
                        </footer>
                    </section>
                </section>
            </a>
        </article>

         <!-- CYBERPUNK -->
         <article class="unit-product-cart">
            <a href="/productDetail" class="view-cart">
                <!-- Imágen -->
                <div class="game-image-cart">
                    <img src="img/cyberpunk-card.jpg" alt="cyberpunk">
                </div>
                    <!-- Name Product -->
                <section class="Description-cart">
                    <div class="name-game">
                        <h3>Cyberpunk</h3>
                    </div>    
                    <section class="price-trash-cart">
                        <!-- precio -->
                        <div class="price-cart">
                            <h2>$1099.50</h2>
                        </div>
                        <!-- trash -->
                        <footer class="trash-cart">
                            <i class="fas fa-trash-alt"></i>
                        </footer>
                    </section>
                </section>
            </a>
        </article>        

        <article class="unit-product-cart">
                    <!-- Total Price -->
            <article class="total-price">
                <div class="total">
                    <h3>Precio Total*</h3>
                </div>            
                <div class="total-price-cart">
                    <h3>$1239,49</h3>
                </div>
            </article>    
        </article>
        <article class="unit-product-cart">
                    <!-- Nota aclaratoria de impuestos -->
            <div class="tax-note">
                <p class="p-note">*Impuestos incluidos</p>
            </div>            
        </article>
                    <!-- Boton de comprar -->
        <div class="button-buy">
            <button class="button" id="send" type="submit" width:>Comprar</button>
        </div>

    </section>
</main>

<%- include('../partials/footer')%>