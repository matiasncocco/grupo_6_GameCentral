<article class="unit-product">
    <div class="game-image">
        <img src="/img/products/card/<%= products[i].card %>">
        <div class="ribbon">
            <% if (products[i].discount == true) { %>
                <div class="full-price crossed-out">
                    <h3 class="big-title"><%= products[i].price %></h3>
                    <h4 class="small-title"><%= products[i].price %></h4>
                </div>
                <div class="discount">
                    <h2 class="big-title">50%</h2>
                    <h3 class="small-title">50%</h3>
                </div>
                <div class="new-price">
                    <h2 class="big-title"><%= products[i].price %></h2>
                    <h3 class="small-title"><%= products[i].price %></h3>
                </div>
            <% } else { %>
                <div class="full-price">
                    <h3 class="big-title"><%= products[i].price %></h3>
                    <h4 class="small-title"><%= products[i].price %></h4>
                </div>
            <% } %>
        </div>
    </div>
    <div class="overlay-product"></div>
    <div class="game-title">
        <h2 class="big-title"><%= products[i].name %></h2>
    </div>
    <div class="ver-mas">
        <a href="/products/<%= products[i].id %>">
            <h3 class="big-title">VER M√ÅS</h3>
        </a>
    </div>
</article>