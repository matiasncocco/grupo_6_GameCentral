<%- include('../partials/head') %>
<%- include('../partials/header') %>
<main class="main-main">
    <section class="show-section">
        <section class="show-img">
            <img class="image-image box-width" src="/img/products/<%= product.img %>">
            <img class="card-image box-width" src="/img/products/<%= product.card %>">
        </section>
        <section class="show-main">
            <header class="show-title show-title-game-title">
                <h2 class="big-title">
                    <%= product.name %>
                </h2>
                <h4 class="small-title">
                    <%= product.name %>
                </h4>
            </header>
            <article class="show-description">
                <p>
                    <%= product.description %>
                </p>
            </article>
        </section>
        <section class="show-category">
            <header class="show-title category-title">
                <h3 class="big-title big-title-category">
                    CATEGORÍAS
                </h3>
                <h6 class="small-title">
                    CATEGORÍAS
                </h6>
            </header>
            <article class="category-box">
                <% productCategory.forEach(category => { %>
                    <div class="category-single-box">
                        <p class="category-text">
                            <%= category %>
                        </p>
                    </div>
                <% }); %>
            </article>
        </section>
    <!-- </section>  -->



        <!-- IS IT IN OFFER? -->
        <% if (product.discount == 'true') { %>
            <!-- SHOW THIS -->
            <section class="offer-display">
                <div class="offer-display-box">
                    <h4>
                        <%= product.price %>
                    </h4>
                </div>
                <div class="offer-display-box">
                    <h4>
                        <%= product.discountRate %>%
                    </h4>
                </div>
                <div class="offer-display-box te-ahorras-text">
                    <p>
                        Te ahorras
                    </p>
                </div>
                <div class="offer-display-box te-ahorras-result">
                    <h4>
                        <%= product.price - product.price %>!
                    </h4>
                </div>
            </section>
        <% } %>
        





