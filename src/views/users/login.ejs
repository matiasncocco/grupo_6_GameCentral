<%- include ('../partials/head') %>
<%- include ('../partials/header') %>
<main class="main-main" >
    <header class="main-title">
        <h3 class="big-title">
            INGRESÁ
        </h3>
        <h5 class="small-title">
            INGRESÁ
        </h5>
    </header>
    <form class="register-form" action="/users/login" method="POST">
        <section class="form-section">
            <!-- email -->
            <div class="input-box">
                <label class="label-label" for="email">
                    E-mail
                </label>
                <input 
                    class="input-text"
                    type="text"
                    name="email"
                    id="email"
                    value="<%= locals.oldEmail ? locals.oldEmail : null %>"
                >
                <% if (locals.errors && errors.email) { %>
                    <span class="error-msg">
                        <%= errors.email.msg %>
                    </span>
                <% } %>
            </div>
            <!-- password -->
            <div class="input-box">
                <label class="label-label" for="password">
                    Contraseña
                </label>
                <input
                    class="input-text"
                    type="password"
                    name="password"
                    id="password"
                >
                <% if (locals.errors && errors.password) { %>
                    <span class="error-msg">
                        <%= errors.password.msg %>
                    </span>
                <% } %>
            </div>
            <div class="input-box">
                <label class="label-tyc label-remember" for="remember">
                    Recordarme
                    <input
                        class="input-checkbox"
                        type="checkbox"
                        name="remember"
                        id="remember"
                        value="remember"
                    >
                </label>
            </div>
            <!-- BUTTONS -->
            <div class="button-box">
                <button class="button-send" type="submit">
                    <h1 class="big-title">
                        INGRESAR
                    </h1>
                    <h4 class="small-title">
                        INGRESAR
                    </h2>
                </button>
                <button class="button-cancel" type="button">
                    <a href="/">
                        <h3 class="big-title">
                            CANCELAR
                        </h3>
                    </a>
                    <a href="/">
                        <h5 class="small-title">
                            CANCELAR
                        </h5>
                    </a>
                </button>
            </div>
        </section>
        <section class="image-section">
            <img class="box-width" src="/img/form-image.jpg">
        </section>
    </form>
</main>
<%- include ('../partials/footer') %>