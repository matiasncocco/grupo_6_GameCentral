<%- include('../partials/head') %>
<%- include('../partials/header') %>

<main class="main-main">

    <header class="main-title first-title">
        <h3 class="big-title">CREA TU CUENTA</h3>
        <h5 class="small-title">CREA TU CUENTA</h5>
    </header>

    <form class="register-form" action="/">

        <section class="form-section">

            <div class="input-box">
                <label class="label-label" for="name">Nombre Completo</label>
                <input class="input-text" type="text" name="name" id="name" placeholder="Juan Pérez" required>
            </div>

            <div class="input-box">
                <label class="label-label" for="username">Nombre de usuario</label>
                <input class="input-text" type="text" name="username" id="username" placeholder="juanperez1992" required>
            </div>
    
            <div class="input-box">
                <label class="label-label" for="email">e-mail</label>
                <input class="input-text" type="email" name="email" id="email" placeholder="juan.perez@gmail.com" required>
            </div>
            
            <div class="input-box">
                <label class="label-label" for="password">Contraseña</label>
                <input class="input-text" type="password" name="password" id="password" placeholder="********" required>
            </div>
    
            <div class="input-box">
                <label class="label-label" for="password-check">Confirme su contraseña</label>
                <input class="input-text" type="password" name="password-check" id="password-check" placeholder="********" required>
            </div>

            <!-- FILE -->
            <div class="input-box">
                <label class="label-label" for="userImg"></label>
            </div>
    
            <div class="input-box">
                <label class="label-label" for="">¿Quiere subscribirse a nuestra Newsletter?</label>
                <div class="radio-box">
                    <label class="label-label" for="si">Si<input class="input-radio" type="radio" name="newsletter" value="si" id="si" required></label>
                </div>
                <div class="radio-box">
                    <label class="label-label" for="no">No<input class="input-radio" type="radio" name="newsletter" value="no" id="no" required></label>
                </div>
            </div>
    
            <div class="input-box">
                <label class="label-tyc">He leído y acepto los términos y condiciones</label>
                <input class="input-checkbox" type="checkbox" required>
            </div>
    
            <div class="button-box">
                <button class="button-send" type="submit">
                    <h1 class="big-title">CREAR</h1>
                    <h4 class="small-title">CREAR</h4>
                </button>
                <button class="button-cancel" type="button">
                    <a href="/"><h3 class="big-title">CANCELAR</h3></a>
                    <a href="/"><h5 class="small-title">CANCELAR</h5></a>
                </button>
            </div>

        </section>

        <section class="image-section">
            <img src="/img/form-image.jpg">
        </section>

    </form>

</main>
<%- include('../partials/footer') %>